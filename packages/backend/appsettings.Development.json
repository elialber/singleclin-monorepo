{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Firebase": {
    "ProjectId": "singleclin-app",
    "ServiceAccountKeyPath": "firebase-service-account.json"
  },
  "AzureStorage": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "ContainerName": "clinic-images",
    "BaseUrl": "http://127.0.0.1:10000/devstoreaccount1/",
    "MaxFileSize": 5242880,
    "AllowedFileTypes": ["jpg", "jpeg", "png", "webp"],
    "ImageQuality": 85,
    "MaxWidth": 1200,
    "MaxHeight": 800,
    "SasToken": {
      "DefaultReadExpiryHours": 24,
      "DefaultReadWriteExpiryHours": 1,
      "CacheDurationMinutes": 30,
      "EnableCaching": true,
      "MaxCacheSize": 1000
    }
  },
  "DefaultAdmin": {
    "Email": "admin@example.com",
    "Password": "Admin123!"
  },
  "JWT": {
    "AccessTokenExpirationInMinutes": 480
  }
}
